<div class="container">
  <h1>Restaurants</h1>

  <%= link_to "Create new restaurant", new_restaurant_path  %>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= restaurant.name %> - <%= restaurant.address %> (<%= restaurant.category %>) [<%= link_to "Details", restaurant_path(id: restaurant.id)  %>]
      </li>
    <% end %>
  </ul>
</div>
